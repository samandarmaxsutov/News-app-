<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.InfoScreen">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:elevation="10dp"
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@drawable/toolbar_bg"

            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="@string/app_name">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"

                app:layout_collapseMode="none"
                />


            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:elevation="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <TextView

            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:padding="16dp"
            android:text="Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba Kuni kecha bo'lib o'tgan\n olimpiadada o'quvchilarimiz g\alaba "
            android:textSize="20sp" />
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
