<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation">

    <ScrollView
        android:id="@+id/root_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_animation"
        android:padding="20dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="20dp">

            <TextView
                android:id="@+id/reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="175dp"
                android:text="Ro'yxatdan o'tish"
                android:textColor="#ffffff"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/email_reg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/reg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_drawable"
                android:drawableStart="@drawable/ic_action_email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/familiya_reg" />

            <EditText
                android:id="@+id/familiya_reg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/email_reg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_drawable"
                android:digits="QWERTYUIOPOʻASDFGHJKLGʻʼZXCVBNMqwertyuiopoʻasdfghjklgʻʼzxcvbnm'&quot;."
                android:drawableStart="@drawable/ic_launcher_person"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Familiya"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ism_reg" />

            <EditText
                android:id="@+id/tel_reg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/email_reg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_drawable"
                android:drawableStart="@drawable/ic_launcher_phone"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Telefon raqam"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_reg" />

            <EditText
                android:id="@+id/ism_reg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/email_reg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="125dp"
                android:background="@drawable/edit_text_drawable"
                android:digits="QWERTYUIOPOʻASDFGHJKLGʻʼZXCVBNMqwertyuiopoʻasdfghjklgʻʼzxcvbnm'&quot;."
                android:drawableStart="@drawable/ic_launcher_person"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Ism"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg" />

            <EditText
                android:id="@+id/parol_reg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/email_reg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_drawable"
                android:drawableStart="@drawable/ic_action_pass"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Parol"
                android:inputType="textPassword"
                android:padding="10dp"
                android:password="true"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tel_reg" />

            <Button
                android:id="@+id/sign_up_reg"
                android:layout_width="500dp"
                android:layout_height="70dp"
                android:layout_below="@id/familiya_reg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="210dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background_sign_up"
                android:text="Ro'yxatdan o'tish"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parol_reg" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>